<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".TripDetailsFragment">

    <ImageView
        android:id="@+id/imageviewCar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:padding="16dp"
        app:srcCompat="@drawable/car_default"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginHorizontal="16dp"
        android:paddingTop="10dp"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textDepAriLocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:textSize="30sp"
                android:text="Departure&amp;arrival"/>

            <TextView
                android:id="@+id/textDepDateTime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:textSize="30sp"
                android:text="Departure date&amp;time"/>

            <TextView
                android:id="@+id/textEstDuration"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:textSize="30sp"
                android:text="Estimated trip duration"/>

            <TextView
                android:id="@+id/textAvaSeat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:textSize="30sp"
                android:text="Available seats number"/>

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:textSize="30sp"
                android:text="Price"/>

            <TextView
                android:id="@+id/textAdditional"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:textSize="30sp"
                android:text="Additional information"/>

            <TextView
                android:id="@+id/textOptional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:textSize="30sp"
                android:text="Optional intermediates"/>

            <TextView
                android:id="@+id/textPlate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="30sp"
                android:text="Plate number"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>