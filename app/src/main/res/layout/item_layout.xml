<?xml version="1.0" encoding="utf-8"?>
 <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tripCard"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/car_default"

            />
        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="16dp">

            <TextView
                android:id="@+id/depatureview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure&amp;arrival"
                android:textAppearance="?attr/textAppearanceBody2"/>
            <TextView
                android:id="@+id/timeview"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Departure date&amp;time"
                 android:textAppearance="?attr/textAppearanceBody2"
             />
            <TextView
                android:id="@+id/priceview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
            />
            <TextView
                android:id="@+id/tripAvailableSeatsField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avaiable Seats"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tripCardEditTripButton"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                style="?attr/borderlessButtonStyle"
                android:text="Edit"
                />

            </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>