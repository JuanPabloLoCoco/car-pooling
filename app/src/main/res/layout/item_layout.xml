<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    style="style/widg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tripCard"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="175dp"

            android:scaleType="centerCrop"
            app:srcCompat="@drawable/car_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:orientation="vertical"
            android:outlineSpotShadowColor="@color/lightGrayColor"
            android:padding="16dp"

            >
            <TextView
                android:id="@+id/list_title"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:text="DEPATURE"
                style="@style/TextAppearance.AppCompat.Title"
                android:textAppearance="?attr/textAppearanceHeadline1" />

            <TextView
                android:id="@+id/depatureview"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="Departure&amp;arrival"
                android:textAppearance="?attr/textAppearanceBody2" />

            <TextView
                android:id="@+id/list_title1"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:text="ARRIVE"
                style="@style/TextAppearance.AppCompat.Title"
                android:textAppearance="?attr/textAppearanceHeadline1"/>

            <TextView
                android:id="@+id/timeview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure date&amp;time"
                android:textAppearance="?attr/textAppearanceBody2" />
            <TextView
                android:id="@+id/list_title2"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:text="PRICE"
                style='@style/TextAppearance.AppCompat.Title'
                android:textAppearance="?attr/textAppearanceHeadline1"/>
            <TextView
                android:id="@+id/priceview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price" />
            <TextView
                android:id="@+id/list_title3"
                android:layout_width="160dp"
                android:layout_height="25dp"
                android:text="AVAILABLESEATS"
                style='@style/TextAppearance.AppCompat.Title'
                android:textAppearance="?attr/textAppearanceHeadline1"/>

            <TextView
                android:id="@+id/tripAvailableSeatsField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avaiable Seats" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tripCardEditTripButton"
                style="?attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="49dp"
                android:layout_gravity="right"
                android:layout_marginBottom="8dp"
                android:text="Edit" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>