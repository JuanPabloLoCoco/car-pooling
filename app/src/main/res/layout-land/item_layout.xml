<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    style="style/widg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tripCard"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="670dp"
    android:layout_height="wrap_content"

    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <ImageView
            android:id="@+id/imageview"
            android:layout_width="210dp"

           android:layout_marginHorizontal="16dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/car_default"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">
         <TextView
            android:id="@+id/list_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:background="#20000000"
            android:paddingLeft="10dp"
            android:text="DEPATURE"
             android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            />
        <TextView
            android:id="@+id/depatureview"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:text="Departure&amp;arrival"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_title1"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="160dp"
                android:layout_height="25dp"
                android:background="#20000000"
                android:paddingLeft="10dp"
                android:text="ARRIVE"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                />
            <TextView
                android:id="@+id/arriveview"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:text="Departure&amp;arrival"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_title2"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="160dp"
                android:layout_height="25dp"
                android:background="#20000000"
                android:paddingLeft="10dp"
                android:text="TIME"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_baseline_access_time_24"
                />
            <TextView
                android:id="@+id/timeview"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:text="Departure&amp;arrival"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_title3"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="160dp"
                android:layout_height="25dp"
                android:background="#20000000"
                android:paddingLeft="10dp"
                android:text="AVASEATS"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_baseline_airline_seat_recline_normal_24"
                />
            <TextView
                android:id="@+id/tripAvailableSeatsField"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:text="Departure&amp;arrival"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_title4"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="#20000000"
                android:paddingLeft="10dp"
                android:text="PRICE"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_baseline_euro_24"
                />
            <TextView
                android:id="@+id/priceview"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:text="Departure&amp;arrival"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tripCardEditTripButton"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:layout_gravity="right"

                android:text="Edit" />
        </LinearLayout>
    </LinearLayout>




    </LinearLayout>




</com.google.android.material.card.MaterialCardView>